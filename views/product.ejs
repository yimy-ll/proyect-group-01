<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= productos[0].nombre %></h2> 
			<p class="product-detail-description">
				<!-- <a href="product-add.html">Editar</a> -->
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= productos[0].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= productos[0].descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<%for (let index=0; index < productos[0].comentarios.length; index++) {%>
							<article>
								<img src=<%=productos[0].comentarios[index].imagen%> alt="">
								<div class="data">
									<p class="user">
										<strong><a href="/users/profile">
												<%=productos[0].comentarios[index].nombre%>
											</a></strong>
										<%= productos[0].comentarios[index].comentario%>
									</p>
								</div>
							</article>
							<%}%>

					</section>
					<form class="form" action="" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	
	<%-include('partials/footer')%>

	<!--footer -->

</body>	
</html>